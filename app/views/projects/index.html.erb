<% @page_title = "プロジェクト一覧" %>

<h1><%= @page_title %></h1>

<% if @projects.present? %>
<table rules="rows">
  <tr>
    <th>プロジェクト名</th>
    <th>開始日</th>
    <th>終了日</th>
    <th>管理者</th>
    <th>ステータス</th>
    <th>削除</th>
  </tr>

<% @projects.each do |project| %>
  <tr>
     <td height="30", width="100"><%= link_to project.name, project %></td>
     <td height="30", width="100"><%= project.start_date  %></td>
     <td height="30", width="100"><%= project.end_date  %></td>
     <td height="30", width="100"><%= project.user.user_name if project.user %></td>
     <td height="30", width="100"><%= project.sts  %></td>
     <%# check_box_tag (idとname), value, checkedか否か, オプション  %>
     <td height="30", width="100"><%= check_box_tag 'delete_flag', project.delete_flag, project.delete_flag, :disabled => true %></td>
  </tr>
<% end %>
</table>

<% else %>
<p>プロジェクト情報がありません。</p>
<% end %>

<br />

<%= link_to '[新規作成]', new_project_path %>
