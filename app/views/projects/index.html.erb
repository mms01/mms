<% @page_title = "Projects list" %>

<h1><%= @page_title %></h1>

<% if @projects.present? %>
<table rules="rows">
  <tr>
    <th>プロジェクト名</th>
    <th>開始日</th>
    <th>終了日</th>
    <th>管理者</th>
    <th>ステータス</th>
    <th colspan="2">Menu</th>
  </tr>

<% @projects.each do |project| %>
  <tr>
     <td height="30", width="100"><%= link_to project.name, project %></td>
     <td height="30", width="100"><%= project.start_date  %></td>
     <td height="30", width="100"><%= project.end_date  %></td>
     <td height="30", width="100"><%= project.user.email if project.user %></td>
     <td height="30", width="100"><%= project.sts  %></td>
     <td>
       <%= link_to '編集', edit_project_path(project) %> |
       <%= link_to '削除', project_path(project), :method => :delete, data: { confirm: 'Are you sure?' } %>
    </td>
  </tr>
<% end %>
</table>

<% else %>
<p>プロジェクト情報がありません。</p>
<% end %>

<br />

<%= link_to 'Create New Project', new_project_path %> |
<%= link_to 'Show Projects', projects_path %> |
<a href="../../">Home</a>
