<p id="notice"><%= notice %></p>

<% @page_title = "プロジェクト詳細" %>
<h1><%= @page_title  %></h1>

<table class="attr">
  <tr>
    <th width="150">ID</th>
    <td><%= @project.id %></td>
  </tr>
  <tr>
    <th>プロジェクト名</th>
    <td><%= @project.name %></td>
  </tr>
  <tr>
    <th>開始日</th>
    <td><%= @project.start_date %></td>
  </tr>
  <tr>
    <th>終了日</th>
    <td><%= @project.end_date %></td>
  </tr>
  <tr>
    <th>管理者</th>
    <td><%= @project.user.user_name %></td>
  </tr>

  <tr>
    <th valign="top">目的:</th>
    <td valign="top"><%= simple_format(@project.purpose) %></td>
  </tr>

  <tr>
    <th>ステータス</th>
    <td><%= @project.sts %></td>
  </tr>

</table>

<%= link_to '[編集]', edit_project_path(@project) %> |


<a href="javascript:void(0)" onclick="doDelete(<%= @project.id %>);">[削除]</a> |


<%= link_to '[一覧に戻る]', projects_path %>

<%= javascript_include_tag 'projects' %>
