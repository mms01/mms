      <td><%= f.select :status, options %></td>
    </tr>
  </table>
  <div class="field">
    <%= f.hidden_field :create_user_id, :value => current_user.user_name %>
  </div>
  <div class="field">
    <%= f.hidden_field :available, :value => true %>
  </div>
  <div class="field">
    <%= f.hidden_field :update_date, :value => Time.now %>
  </div>
  <div class="field">
    <%= f.hidden_field :update_user_id, :value => current_user.user_name %>
  </div>
  
  <div class="actions">
    <%= f.submit "作成" %>
  </div>

