<%= form_for(@meeting) do |f| %>
  <% if @meeting.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@meeting.errors.count, "error") %> prohibited this meeting from being saved:</h2>

      <ul>
      <% @meeting.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    プロジェクト<br />
    <%= f.text_field :project_id %>
  </div>
  <div class="field">
    議題<br />
    <%= f.text_field :title %>
  </div  <div class="field">
    目的<br />
    <%= f.text_area :purpose %>
  </div>
  <div class="field">
    <table>
      <tr>
        <td>開催日: </td>
        <td><%= f.date_select :meeting_date, :use_month_numbers => true %></td>
      </tr>
      <tr>
        <td>開始時間: </td>
        <td><%= f.time_select :start_time, :use_month_numbers => true %></td>
      </tr>
      <tr>
        <td>終了時間: </td>
        <td><%= f.time_select :end_time, :use_month_numbers => true %></td>
      </tr>
    </table>
  </div>
  <div class="field">
    開催場所<br />
    <%= f.text_field :place %>
  </div>
  <div class="field">
    主催者<br />
    <%= f.text_field :user_id %>
  </div>
  <div class="field">
    <% options = ["開催待ち", "議事録作成待ち", "議事録確認依頼中", "完了"] %>
    <%= f.label :status, "ステータス" %><br />
    <%= f.select :status, options %>
  </div>
  <div class="field">
    <%= f.hidden_field :create_user_id, :value => current_user.id %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
